<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaoMoiActivity"
    android:layout_gravity="center">

    <Button
        android:id="@+id/btback"
        android:layout_width="67dp"
        android:layout_height="60dp"
        android:text="2"
        app:layout_constraintRight_toLeftOf="@+id/logoheader"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:drawableEnd="@drawable/baseline_keyboard_backspace_24"
        />
    <ImageButton
        android:id="@+id/logoheader"
        android:layout_width="285dp"
        android:layout_height="55dp"
        android:background="@color/white"
        android:src="@drawable/logoheader"
        app:layout_constraintBottom_toBottomOf="@+id/btlike"
        app:layout_constraintEnd_toStartOf="@+id/btlike"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btlike"
        android:layout_width="70dp"
        android:layout_height="55dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/white"
        android:text="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/like"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoheader"
        android:layout_marginTop="20dp"
        >
        <androidx.viewpager2.widget.ViewPager2
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>