<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tuychon">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/purple_700"
        android:gravity="center_horizontal"
        android:id="@+id/headerTC">
        
        <TextView
            android:layout_width="350dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Tùy chọn"
            android:textColor="@color/white"
            android:paddingLeft="155dp"
            android:textSize="25sp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btback2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableEnd="@drawable/baseline_arrow_right_alt_24"
            android:backgroundTint="@color/purple_700"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/headerTC"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:hint="Chuyên mục"
                android:drawableStart="@drawable/baseline_insights_24"
                android:textSize="20dp"
                android:drawablePadding="8dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Hot"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Mới nhất"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Video"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thế giới"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thời sự"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thể thao"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thể thao"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thể thao"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text="Thể thao"
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#56EAE3E3"
                android:paddingRight="220dp"
                android:text=""
                android:textColor="@color/black"
                android:drawableRight="@drawable/baseline_chevron_right_24"
                android:drawableTintMode="add"
                />


        </LinearLayout>


    </ScrollView>
    

</androidx.constraintlayout.widget.ConstraintLayout>